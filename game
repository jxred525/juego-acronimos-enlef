            currentIndex: 0,
            score: 0,
            playerName: "INVITADO",
            timer: null,
            timerInterval: null,
            maxTime: 0,
            canClick: false,
            questions: [] 
        };

        // --- FUNCIONES CORE ---
        
        function startGame() {
            // Validación de nombre
            const nameInput = document.getElementById('player-name');
            const errorMsg = document.getElementById('error-msg');
            const rawName = nameInput.value.trim();

            if (!rawName) {
                nameInput.classList.add('border-red-500', 'bg-red-50');
                errorMsg.classList.remove('hidden');
                nameInput.focus();
                return;
            }

            state.playerName = rawName.toUpperCase();
            document.getElementById('player-display').innerText = state.playerName;

            // Transición UI
            document.getElementById('start-screen').classList.add('hidden');
            document.getElementById('game-screen').classList.remove('hidden');
            
            // Barajar preguntas
            state.questions = [...database];
            for (let i = state.questions.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [state.questions[i], state.questions[j]] = [state.questions[j], state.questions[i]];
            }

            state.currentIndex = 0;
            state.score = 0;
            updateScoreUI();
            loadQuestion();
        }

        function loadQuestion() {
            if (state.currentIndex >= state.questions.length) {
                endGame();
                return;
            }

            const q = state.questions[state.currentIndex];
            state.maxTime = q.t;
            state.canClick = true;

            document.getElementById('progress-display').innerText = `MISION ${state.currentIndex + 1}/${state.questions.length}`;
            document.getElementById('acronym-text').innerText = q.a;
            document.getElementById('phase-badge').innerText = q.phase.toUpperCase();

            const optionsContainer = document.getElementById('options-container');
            optionsContainer.innerHTML = '';
            
            let allOptions = [
                { text: q.c, correct: true },
                ...q.w.map(txt => ({ text: txt, correct: false }))
            ];
            
            // Barajar opciones
            for (let i = allOptions.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [allOptions[i], allOptions[j]] = [allOptions[j], allOptions[i]];
            }

            allOptions.forEach(opt => {
                const btn = document.createElement('button');
                // Clase ajustada para GRID y Hover
                btn.className = `w-full p-4 md:p-6 text-left bg-gray-100 hover:bg-white text-black text-[10px] md:text-xs pixel-btn relative group flex flex-col justify-center h-full transition-all`;
                btn.innerHTML = `
                    <div class="flex items-start gap-2">
                        <span class="text-gray-400 group-hover:text-black mt-1">></span> 
                        <span class="leading-relaxed">${opt.text}</span>
                    </div>`;
                btn.onclick = () => handleAnswer(btn, opt.correct);
                optionsContainer.appendChild(btn);
            });

            startTimer(q.t);
        }

        function startTimer(seconds) {
            clearInterval(state.timerInterval);
            const bar = document.getElementById('timer-bar');
            
            bar.style.transition = 'none';
            bar.style.width = '100%';
            bar.className = "h-full bg-green-500 w-full border-r-4 border-white";
            
            void bar.offsetWidth; 

            bar.style.transition = `width ${seconds}s steps(${seconds * 10})`;
            bar.style.width = '0%';

            const startTime = Date.now();
            state.timerInterval = setInterval(() => {
                const elapsed = (Date.now() - startTime) / 1000;
                if (elapsed >= seconds) {
                    timeUp();
                }
            }, 100);
        }

        function handleAnswer(btnElement, isCorrect) {
            if (!state.canClick) return;
            state.canClick = false;
            clearInterval(state.timerInterval);

            const bar = document.getElementById('timer-bar');
            const currentWidth = bar.offsetWidth;
            const parentWidth = bar.parentElement.offsetWidth;
            const percentageLeft = (currentWidth / parentWidth);

            if (isCorrect) {
                btnElement.classList.remove('bg-gray-100', 'hover:bg-white', 'text-black');
                btnElement.classList.add('bg-green-500', 'text-white', 'border-green-800', 'scale-[1.02]', 'z-10');
                
                const timeBonus = Math.round(percentageLeft * 500); 
                const roundScore = 100 + timeBonus;
                state.score += roundScore;
                
            } else {
                btnElement.classList.remove('bg-gray-100', 'hover:bg-white', 'text-black');
                btnElement.classList.add('bg-red-500', 'text-white', 'border-red-800');
                
                let blinks = 0;
                const interval = setInterval(() => {
                    btnElement.style.visibility = (btnElement.style.visibility === 'hidden' ? 'visible' : 'hidden');
                    blinks++;
                    if(blinks > 5) {
                        clearInterval(interval);
                        btnElement.style.visibility = 'visible';
                    }
                }, 100);
            }

            updateScoreUI();

            setTimeout(() => {
                state.currentIndex++;
                loadQuestion();
            }, 1500);
        }

        function timeUp() {
            if (!state.canClick) return;
            state.canClick = false;
            clearInterval(state.timerInterval);
            
            const bar = document.getElementById('timer-bar');
            bar.className = "h-full bg-red-600 w-full";
            
            const currentQuestion = state.questions[state.currentIndex];
            const buttons = document.querySelectorAll('#options-container button');
            buttons.forEach(b => {
                if (b.innerText.includes(currentQuestion.c)) {
                     b.classList.remove('bg-gray-100', 'text-black');
                     b.classList.add('bg-green-500', 'text-white');
                }
            });

            setTimeout(() => {
                state.currentIndex++;
                loadQuestion();
            }, 2000);
        }

        function updateScoreUI() {
            document.getElementById('score-display').innerText = state.score.toString().padStart(5, '0');
        }

        function endGame() {
            document.getElementById('game-screen').classList.add('hidden');
            document.getElementById('result-screen').classList.remove('hidden');
            
            const finalScore = state.score;
            document.getElementById('final-score').innerText = finalScore.toString().padStart(5, '0');
            document.getElementById('player-final-name').innerText = `AGENTE: ${state.playerName}`;

            // Guardar puntaje y mostrar leaderboard
            saveScore(state.playerName, finalScore);
            renderLeaderboard();
        }

        // --- LÓGICA LEADERBOARD ---
        function getLeaderboardData() {
            const stored = localStorage.getItem(STORAGE_KEY);
            return stored ? JSON.parse(stored) : [...DEFAULT_SCORES];
        }

        function saveScore(name, score) {
            let scores = getLeaderboardData();
            scores.push({ name: name, score: score });
            
            // Ordenar descendente
            scores.sort((a, b) => b.score - a.score);
            
            // Mantener solo top 5
            scores = scores.slice(0, 5);
            
            localStorage.setItem(STORAGE_KEY, JSON.stringify(scores));
        }

        function renderLeaderboard() {
            const scores = getLeaderboardData();
            const listContainer = document.getElementById('leaderboard-list');
            listContainer.innerHTML = '';

            scores.forEach((entry, index) => {
                const row = document.createElement('div');
                row.className = "flex justify-between items-center border-b border-gray-300 pb-2";
                
                // Color según posición
                let colorClass = "text-gray-600";
                if(index === 0) colorClass = "text-orange-600 font-bold text-sm md:text-base";
                if(index === 1) colorClass = "text-blue-600 font-bold text-sm md:text-base";
                if(index === 2) colorClass = "text-green-600 font-bold text-sm md:text-base";

                // Resaltar si es el jugador actual
                const isCurrentPlayer = (entry.name === state.playerName && entry.score === state.score);
                if(isCurrentPlayer) {
                    row.className += " bg-yellow-100 animate-pulse px-2 -mx-2 rounded";
                }

                row.innerHTML = `
                    <span class="${colorClass}">${index + 1}. ${entry.name}</span>
                    <span class="${colorClass}">${entry.score}</span>
                `;
                listContainer.appendChild(row);
            });
        }
    </script>
</body>
</html>
